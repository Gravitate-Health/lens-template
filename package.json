{
  "name": "lens-template-tests",
  "version": "1.0.0",
  "description": "TypeScript lens template for Gravitate Health - Production code compiled to JavaScript, tests in TypeScript",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build.mjs",
    "build:prod": "NODE_ENV=production node scripts/build.mjs",
    "build:watch": "node scripts/build.mjs --watch",
    "pretest": "npm run bundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bundle": "lens-tool-bundler bundle dist/index.js --bundle=$(lens-tool-bundler lslens | head -n 1) -p",
    "prebundle": "npm run build:prod",
    "clean": "rm -rf dist",
    "dev": "npm run build:watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@gravitate-health/lens-tool-bundler": "^0.5.7",
    "@gravitate-health/lens-tool-test": "^1.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "tests/**/*.ts",
      "!tests/**/*.test.ts"
    ]
  },
  "keywords": [
    "fhir",
    "gravitate-health",
    "lens",
    "typescript",
    "esbuild"
  ],
  "author": "Gravitate Health",
  "license": "Apache-2.0"
}
